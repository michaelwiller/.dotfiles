#!/bin/bash

usage(){
	echo '$0: run tpaexec capture all output'
	echo ' '
	echo 'Usage: $0 COMMAND'
	echo '  where COMMAND is one of:'
	echo ' '
	echo ' c|commit:    Commit all tpa changes to git'
	echo ' u|up:        Run `tpaexec provision .` and `tpaexec deploy .`'
	echo ' d|down:      Run `tpaexec deprovision .`'
	echo ' l|list:      list log files'
	echo ' setup:       Run setup command (after changing version)'
	echo ' s|ssh ARG:   Run `ssh -F ssh_config ARG`' 
	echo '  xp [ARG]:   Find servers in config.yaml that match [ARG] and create tmux xpanes for all. Create for all server if no ARG.'
	echo ' --- '
	echo ' p|provision: Run `tpaexec provision .`'
	echo ' dep|deploy:  Run `tpaexec deploy .`'
}

isUp(){
	if [ -f ssh_config ]; then
		return 0
	else
		return -1
	fi
}

getHosts(){
	if [ ! -z $1 ]; then
		t=$(grep -e '^Host' ssh_config | grep -v '*' | cut -d ' ' -f 2 | grep $1)
	else
		t=$(grep -e '^Host' ssh_config | grep -v '*' | cut -d ' ' -f 2 )
	fi
	echo $t
}

logfile=/tmp/tpu.$$.log
export SLEEP_TIME=5

if [ ! -f config.yml ]; then
    echo "No config.yml - are you in the right directory?"
    exit 0
fi

if [ $# -eq 0 ]; then
	if isUp; then
		action="down"
	else
		action="up"
	fi
else
	action=$1; shift
fi

case $action in

	c|commit)
		git add -A
		git commit -m 'automatic commit all'
		;;

	u|up)
                ( rm -f $logfile >>$logfile 2>&1 /dev/null
		echo " ----------------------------------- TPAEXEC PROVISION----------------------------------"; sleep $SLEEP_TIME
		tpaexec provision . || exit -1
		echo " " 
		echo " "
		echo " ----------------------------------- TPAEXEC DEPLOY ------------------------------------"; sleep $SLEEP_TIME
		echo " " 
		echo " "
		tpaexec deploy . || exit -2 ) | tee $logfile
		;;

	d|down)
		( echo " ----------------------------------- TPAEXEC DEPROVISION ------------------------------------" ; sleep $SLEEP_TIME
		tpaexec deprovision . ) | tee $logfile
		;;

        p|provision)
		tpaexec provision .
		;;

	dep|deploy)
		tpaexec deploy .
		;;

	l|list)
		ls -ltr /tmp/tpu.*.log
		;;
	setup)
		tpaexec setup && tpaexec selftest && tpaexec info
		;;

	ls)
		if ! isUp; then
			echo 'Cluster not up'
		else
			getHosts $1
		fi
		;;

	s|ssh)
		if isUp; then
			target=$(getHosts $1)
			no_of_targets=$(echo $target | wc -w )
			no_of_targets=$(($no_of_targets + 0))
			if [ $no_of_targets -eq 1 ]; then
				ssh -F ssh_config $target
			else
				echo "$no_of_targets possible targets: $target "
			fi
		else
			echo 'Cluster not up'
		fi
		;;

        st|status)
		if isUp; then
			echo UP
		else
			echo DOWN
		fi
		;;

	r|remove)

		rm -f /tmp/tpu.*.log
		;;
	
	reset)  echo 'This will delete the deployment and re-create it. Waiting 15 sec before running the commands'; sleep 15
		tp down; 
		tp up;
		;;
	xp)
		if isUp; then
			:
		else
			echo "Is the deployment up?"
			exit 0
		fi

		targets=$(getHosts $1)
		echo Targets: $targets
		xpanes -c 'ssh -F ssh_config {}' $targets
		;;

	*)
		usage; exit 0;
		;;
esac
